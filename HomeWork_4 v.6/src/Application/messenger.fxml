<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?scenebuilder-stylessheet /css/Style.css?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.PasswordField?>
<BorderPane fx:controller="Application.Controller" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121">
    <stylesheets><URL value="@/CSS/Style.css" /></stylesheets>
    <top>
        <HBox fx:id="authrizationPannel" visible="true">
            <TextField fx:id="loginField" promptText="логин"/>
            <PasswordField fx:id="passwordField" promptText="пароль" />
            <Button fx:id="authrize" text="Авторизоваться" />
        </HBox>
    </top>
    <center>
        <ScrollPane>
            <VBox fx:id="mainWindow" managed="false" visible="false"/>
        </ScrollPane>
    </center>
    <bottom>
        <HBox fx:id="messagePanel" managed="false" visible="false">
            <TextField fx:id="messageWindow" promptText="Введите сообщение ..." HBox.hgrow="ALWAYS" />
            <Button fx:id="butSend" onAction="#send" text="Send" />
        </HBox>
    </bottom>
</BorderPane>


